{
"update_url": "https://clients2.google.com/service/update2/crx",

	"name": "Panopto Video Downloader",
	"version": "1.0",
	"description": "Download Video From Panopto",
	"manifest_version": 2,

	"background": {
		"scripts": ["background.js"]
	},
	"browser_action": {
		"default_icon": "download-icon-green.png"
	},
	"content_scripts": [
		{
			"matches": ["https://*.cloud.panopto.eu/*"],
			"js": ["payload.js"]
		}
	],
	"permissions": [
		"activeTab",
		"downloads"
	]
}
